<div class="mt-2">
  <h1>Bird Songs by Location</h1>
</div>

<form action="/song-results" method="post">

  <div class= "form-group mt-4">
    <label for="location">Search for bird songs in a certain location! Try a
    state, city, or other area!</label>
    <input type="text" size="50" name="location">
  </div>

  <div class= "form-group mt-2">
    <input type="submit" value="Search">
  </div>

</form>

<div class="mt-4">
  <h1>Results</h1>
  <p>You searched for <%= location %></p>

  <% results.map((rec) => { %>
    <div class="mb-2">
      <iframe src='https://www.xeno-canto.org/<%= rec.id %>/embed?simple=1' scrolling='no' frameborder='0' width='340' height='115'></iframe>
    </div>
    <hr>

  <%})%>
</div>
