<body>

			<div class="mb-2" id="login">
				<% if (!loggedIn) {%>
				<a href="/auth/google">
					<button type="button" class="btn btn-outline-success">Login</button>
				</a>
				<% } else { %>
					<a href="/profile"><i class="bi bi-person-circle" style="font-size:225%"></i></a>
					<a id="logout" href="/logout">
						<i class="bi bi-door-closed bot-icon" style="font-size:225%"></i>
						<i class="bi bi-door-open top-icon" style="font-size:225%"></i>
					</a>
				<% } %>

			</div>


 <nav class="navbar navbar-expand-lg navbar-dark">
	  <a class="navbar-brand" href="/">NatureWalk</a>
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
	    <span class="navbar-toggler-icon"></span>
	  </button>

	  <div class="collapse navbar-collapse" id="navbarSupportedContent">

    <ul class="navbar-nav mr-auto">

      <li class="nav-item ">
        <a class="nav-link" href="/">Home</a>
      </li>

			<% if (loggedIn) { %>
				<li class="nav-item">
	        <a class="nav-link" href="/diary/">My Nature Walks</a>
	      </li>
			<% } %>

      <li class="nav-item">
        <a class="nav-link" href="/about">About the Team</a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="/fav-walk">Favorite Walk</a>
      </li>

    </ul>


  </div>
</nav>

		<%- body %>
	</div>
</body>

</html>
